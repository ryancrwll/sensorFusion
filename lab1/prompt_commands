--right_image ./sample_data/rectified_images_0/right/right_boxes.png \
--out_pts_file ./sample_data/points/boxes_0.ply \
--rect_stereo_calib ./sample_data/rectify_calib_0.yaml\
--debug

python ./sparse_matching_simple.py \
